<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="ChannelLayout">
        <attr name="cl_column_count" format="integer" />
        <attr name="cl_column_item_count" format="integer" />
        <attr name="cl_column_item_text_size" format="dimension|reference" />
        <attr name="cl_column_item_padding_left" format="dimension|reference" />
        <attr name="cl_column_item_padding_right" format="dimension|reference" />
        <attr name="cl_column_gravity" format="enum">
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
            <enum name="center" value="3" />
        </attr>
    </declare-styleable>
</resources>